<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Fontawesome -->
    <!-- <script src="https://kit.fontawesome.com/42a182743f.js" crossorigin="anonymous"></script> -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- CSS -->
    <link rel="stylesheet" href="/public/css/form.css" />
    <title>Login</title>
</head>

<body>
    <!-- nav -->
    <%-include('../partials/navbar.ejs')%>

        <div class="form-container">
            <!-- icon -->
            <h1>Update Password</h1>
            <p>
                <!-- lock icon -->
                <i class="fas fa fa-lock"></i>
            </p>
            <%if(error){%>
                <small class="error">
                    <i class="fas fa fa-exclamation-circle"></i>
                    <%=error%>
                </small>
                <%}%>
                    <form action="/api/v1/users/update-password?_method=PUT" method="POST">
                        

                        <label for="password">Password</label>
                        <input type="password" name="password" id="password" />

                        <button type="submit">Update</button>

                       
                    </form>
        </div>
        <%-include('../partials/footer.ejs')%>

</body>

</html>