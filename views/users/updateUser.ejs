<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Fontawesome -->
    <!-- <script src="https://kit.fontawesome.com/42a182743f.js" crossorigin="anonymous"></script> -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- CSS -->
    <link rel="stylesheet" href="/public/css/form.css" />
    <title>Update User</title>
</head>

<body>
        <%-include('../partials/navbar.ejs')%>

    <div class="form-container">
        <!-- icon -->
        <h1>
            Update User Form
            <i class="fas fa fa-user-plus"></i>
        </h1>

        <small class="error">
            <i class="fas fa fa-exclamation-circle"></i>
            Invalid Credentials
        </small>
        <form action="/login" method="POST">
            <!-- full name -->
            <label for="name">Full Name</label>
            <input type="text" value="<%=user.fullName%>" name="name" id="name" />
            <!-- email -->
            <label for="email">Email</label>
            <input type="email" value="<%=user.email%>" name="email" id="email"/>

            <button type="submit">Update User</button>

        </form>
    </div>
        <%-include('../partials/footer.ejs')%>

</body>

</html>